{
  "suggest.noselect": false,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  "diagnostic.checkCurrentLine": false,
  "codeLens.enable": false,
  "[markdown][css][scss][less][svg][dart][html][rust][typescript][typescriptreact][javascriptreact][go][json][elixir][heex][eelixir]": {
    "coc.preferences.formatOnSave": true
  },
  "[javascript][ruby]": {
    "coc.preferences.formatOnSave": true
  },
  "solargraph.autoformat": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": false,
  "solargraph.promptDownload": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },
    "elixirLS": {
      "command": "~/.elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir", "heex"],
      "rootPatterns": ["mix.exs"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  },
  "emmet.includeLanguages": {
    "elixir": "html",
    "phoenix-heex": "html"
  },
  "snippets.userSnippetsDirectory": "~/dotfiles/snippets",
  "snippets.textmateSnippetsRoots": ["~/dotfiles/snippets"],
  "elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",
  "tailwindCSS.emmetCompletions": true,
  "snippets.ultisnips.pythonPrompt": false
}
