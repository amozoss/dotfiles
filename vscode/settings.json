{
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-h>": false,
    "<C-j>": false,
    "<C-k>": false,
    "<C-l>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    // File navigation 
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        "workbench.action.files.newUntitledFile"
      ]
    },
    // Split management
    {
      "before": [
        "<leader>",
        "\\"
      ],
      "commands": [
        "workbench.action.splitEditorRight"
      ]
    },
    {
      "before": [
        "<leader>",
        "/"
      ],
      "commands": [
        "workbench.action.splitEditorDown"
      ]
    },
    // Buffer/Tab management
    {
      "before": [
        "<leader>",
        "l"
      ],
      "commands": [
        "workbench.action.showAllEditors"
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    // Window resizing
    {
      "before": [
        "<leader>",
        ">"
      ],
      "commands": [
        "workbench.action.increaseViewSize",
        "workbench.action.increaseViewSize",
        "workbench.action.increaseViewSize"
      ]
    },
    {
      "before": [
        "<leader>",
        "e"
      ],
      "commands": [
        "editor.action.inlineSuggest.trigger"
      ]
    },
    {
      "before": [
        "<leader>",
        "<"
      ],
      "commands": [
        "workbench.action.decreaseViewSize",
        "workbench.action.decreaseViewSize",
        "workbench.action.decreaseViewSize"
      ]
    },
    // Code actions
    {
      "before": [
        "g",
        "d"
      ],
      "commands": [
        "editor.action.revealDefinition"
      ]
    },
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    },
    {
      "before": [
        "<leader>",
        "g",
        "r"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    },
    // Quick Open navigation
    {
      "before": [
        "<C-b>",
        "\""
      ],
      "commands": [
        "workbench.action.splitEditorDown"
      ]
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        "editor.action.addSelectionToNextFindMatch",
        "search.action.openNewEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "n"
      ],
      "commands": [
        "search.action.collapseSearchResults"
      ]
    },
    {
      "before": [
        "<CR>"
      ],
      "when": "inSearchEditor",
      "commands": [
        "search.action.openInCurrentEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "when": "inSearchEditor",
      "commands": [
        "editor.action.peekDefinition"
      ]
    },
    {
      "before": [
        "z"
      ],
      "commands": [
        "editor.toggleFold"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        "editor.toggleAllFolds"
      ]
    }
  ],
  "workbench.editor.showTabs": "single",
  "extensions.ignoreRecommendations": false,
  "extensions.recommendations": [
    "esbenp.prettier-vscode",
    "jakebecker.elixir-ls",
    "emmet-vscode",
    "ms-vscode.vscode-typescript-next",
    "golang.go",
    "formulahendry.auto-close-tag",
    "ecmel.vscode-html-css",
    "bradlc.vscode-tailwindcss",
    "castwide.solargraph",
    "planbcoding.vscode-react-refactor",
    "vscode-snippets",
    "Vue.volar"
  ],
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.defaultProfile.osx": "Solarized Dark",
  "workbench.colorTheme": "Solarized Dark",
  "workbench.colorCustomizations": {
    "[Solarized Dark]": {
      "editor.background": "#001214",
      "sideBar.background": "#001214",
      "terminal.background": "#001214",
      "activityBar.background": "#001214",
      "panel.background": "#001214",
      "statusBar.background": "#001214",
      "titleBar.activeBackground": "#001214"
    }
  },
  "snippets.userSnippetsDirectory": "~/dotfiles/snippets",
  "snippets.textmateSnippetsRoots": [
    "~/dotfiles/snippets"
  ],
  "cursor.chat.showSuggestedFiles": true,
  "cursor.cmdk.useThemedDiffBackground": true,
  "cursor.diffs.useCharacterLevelDiffs": true
}